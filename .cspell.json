{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en,ru",
  "languageId": "ts,tsx",
  "import": [
    "@cspell/dict-ru_ru/cspell-ext.json"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/public/**",
    "**/*.js",
    "**/*.json",
    "**/*.html",
    "**/*.svg",
    "**/*.txt"
  ],
  "dictionaryDefinitions": [
    {
      "name": "general",
      "path": ".cspell-ignore",
      "description": "Слова, разрешенные во всем проекте"
    }
  ],

  "dictionaries": ["general", "typescript", "node"]
}
